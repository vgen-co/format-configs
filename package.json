{
    "name": "@vgen-co/format-configs",
    "version": "1.3.3",
    "description": "VGen's shared linting and formatting configs",
    "author": "VGen (https://vgen.co/)",
    "license": "UNLICENSED",
    "type": "module",
    "files": [
        "./dist/**/*",
        "./hooks/**/*"
    ],
    "exports": {
        "./eslint": {
            "import": "./dist/eslint.js",
            "require": "./dist/eslint.js",
            "types": "./dist/eslint.d.ts"
        },
        "./prettier": {
            "import": "./dist/prettier.js",
            "require": "./dist/prettier.js",
            "types": "./dist/prettier.d.ts"
        }
    },
    "scripts": {
        "artifactregistry-login": "npx google-artifactregistry-auth",
        "check-updates": "npx npm-check-updates",
        "format:check": "prettier . --check --cache",
        "format": "npm run build && prettier . --write --cache",
        "lint:check": "eslint . --max-warnings=0 --cache",
        "lint": "npm run build && npm run lint:check -- --fix",
        "test": "echo 0",
        "build": "tsc"
    },
    "peerDependencies": {
        "@eslint/js": "^9.24.0",
        "@stylistic/eslint-plugin": "^4.2.0",
        "eslint": ">= 9",
        "globals": "^16.4.0",
        "lefthook": "^1.13.1",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.30.1"
    },
    "devDependencies": {
        "@tsconfig/node24": "^24.0.1",
        "@types/node": "^24.5.2",
        "lefthook": "1.13.1",
        "typescript": "^5.8.3"
    }
}
